<h1>Details for Movie #<%= @movie.id %></h1>

<h3>Title</h3>
<p><%= @movie.title %></p>

<h3>Year</h3>
<p><%= @movie.year %></p>

<h3>Director</h3>
<p><%= link_to @movie.director.name, director_path(@movie.director_id) %></p>

<h3>Cast</h3>
<% @movie.roles.each do |r| %>
<%= r.character_name %> (<%= r.actor.name %>)<br/>
<% end %>

<h3>Votes</h3>
<% @movie.votes.each do |v| %>
<%= v.user.name %><br/>
<% end %>

<h4>Tasks</h4>
<%= link_to "Delete #{@movie.title}", movie_path(@movie.id), method: 'delete' %>
